# Database Prisma (PostgreSQL per Netlify)
# In produzione, usa la variabile DATABASE_URL fornita da Netlify
DATABASE_URL="postgresql://username:password@localhost:5432/inventario_av"

# Config email (Nodemailer)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_user
EMAIL_PASS=your_pass
EMAIL_FROM="Inventario AV <noreply@example.com>"

EMAIL_NOTIFY="magazzino@example.com"

# Google Custom Search API (per la ricerca immagini web)
# https://developers.google.com/custom-search/v1/introduction
GOOGLE_API_KEY=your_google_api_key
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id
